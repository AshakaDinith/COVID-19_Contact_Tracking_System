<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Home"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="60sp" />



        <LinearLayout
            android:id="@+id/rlCovid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle1"
            >

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Health Status"
                android:textColor="#000000"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="30sp"
                 />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/txtNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Notification"
                android:textAlignment="center"/>
        </LinearLayout>



        <VideoView
            android:id="@+id/vvBlueScan"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnSelfAss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Self Assessment"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Your History"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Stats"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_rectangle"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black" />


    </LinearLayout>
</ScrollView>